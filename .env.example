# Configuración del Gateway IoT Edge Computing

# ID único del gateway (se genera automáticamente si no se especifica)
GATEWAY_ID=gateway-raspberry-pi-001

# Base de datos SQLite local
DATABASE_URL=sqlite://sensor_data.db

# URL del servicio cloud principal donde se enviarán los datos procesados
CLOUD_SERVICE_URL=https://tu-cloud-service.com/api/v1/ingest

# API Key para autenticación con el servicio cloud
CLOUD_API_KEY=tu_api_key_secreta_aqui

# Tamaño del batch antes de sincronizar automáticamente (número de lecturas)
CLOUD_SYNC_BATCH_SIZE=50

# Intervalo de sincronización periódica en segundos (300 = 5 minutos)
CLOUD_SYNC_INTERVAL_SECS=300

# Días para mantener datos ya sincronizados en la base de datos local
DATA_RETENTION_DAYS=7

# Nivel de logging (trace, debug, info, warn, error)
RUST_LOG=iot_gateway=info,tower_http=info